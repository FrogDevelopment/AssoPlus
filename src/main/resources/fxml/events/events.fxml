<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.controller.EventsController">

    <center>
        <VBox>
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints minWidth="100.0" prefWidth="150.0"/>
                    <ColumnConstraints minWidth="100.0" prefWidth="200.0"/>
                    <ColumnConstraints minWidth="100.0" prefWidth="150.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                </rowConstraints>

                <Label text="%event.title" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtTitle" prefHeight="25.0" prefWidth="541.0" GridPane.columnIndex="1"
                           GridPane.columnSpan="2147483647"/>

                <Label text="%event.date" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpDate" prefHeight="25.0" prefWidth="118.0" showWeekNumbers="false"
                            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="%event.category" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cbCategory" prefHeight="25.0" prefWidth="202.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="2"/>

                <Label text="%event.text" GridPane.rowIndex="3"/>
                <Label fx:id="countChar" text="0/500" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button fx:id="btnCategories" mnemonicParsing="false" onMouseClicked="#manageCategories"
                        text="%event.categories.manage" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Button>
            </GridPane>
            <TextArea fx:id="taText" prefWidth="500.0" wrapText="true"/>

            <TableView fx:id="tableView" managed="true">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="%event.title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="%event.date">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="%event.category">
                        <cellValueFactory>
                            <PropertyValueFactory property="categoryCode"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <Button fx:id="btnSave" onAction="#saveData" text="%global.add"/>
            <Button fx:id="btnUpdate" disable="true" onAction="#updateData" text="%global.update"/>
            <Button fx:id="btnDelete" disable="true" onAction="#deleteData" text="%global.delete"/>
        </ToolBar>
    </bottom>

</BorderPane>
