<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.controller.CategoriesController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <children>
               <HBox prefHeight="50.0" prefWidth="550.0" spacing="50.0">
                   <padding>
                       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                   </padding>
                  <children>
                      <TextField fx:id="txtCode" prefHeight="25.0" prefWidth="100.0" promptText="%global.code" />
                      <TextField fx:id="txtLabel" prefHeight="25.0" prefWidth="250.0" promptText="%global.label" />
                      <Button mnemonicParsing="false" onAction="#onAddCategory" text="%global.add" />
                      <Button mnemonicParsing="false" onMouseClicked="#onRemoveCategory" text="%global.remove" />
                  </children>
               </HBox>
   
               <TreeTableView fx:id="treeTableView" maxHeight="350.0" minWidth="350.0" prefWidth="350.0" BorderPane.alignment="CENTER">
                   <columns>
                       <TreeTableColumn fx:id="columnCode" prefWidth="100.0" resizable="false" text="%global.code" />
                       <TreeTableColumn fx:id="columnLabel" prefWidth="250.0" text="%global.label" />
                   </columns>
               </TreeTableView>
           </children>
        </VBox>
    </center>
    <bottom>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <items>
               <Button mnemonicParsing="false" onMouseClicked="#onSave" text="%gobal.save" />
               <Button mnemonicParsing="false" onMouseClicked="#onClose" text="%global.close" />
           </items>

        </ToolBar>
    </bottom>
</BorderPane>
