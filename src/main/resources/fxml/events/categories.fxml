<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="400.0" prefWidth="442.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.frogdevelopment.assoplus.controller.CategoriesController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <Label fx:id="lbError" alignment="CENTER" contentDisplay="CENTER" managed="false" text="Label"
                   visible="false">
                <font>
                    <Font size="16.0"/>
                </font>
                <style>-fx-background-color: #F22E30</style>
            </Label>
            <HBox alignment="CENTER_LEFT" prefWidth="550.0" spacing="5.0">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
                <TextField fx:id="txtCode" prefHeight="25.0" prefWidth="95.0" promptText="%global.code"/>
                <TextField fx:id="txtLabel" prefHeight="25.0" prefWidth="245.0" promptText="%global.label"/>
                <Button mnemonicParsing="false" onAction="#onAddCategory">
                    <graphic>
                        <ImageView>
                            <Image url="/img/add_16.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <TableView fx:id="tableView" maxHeight="350.0" minHeight="250.0" prefHeight="250.0" maxWidth="352"
                       minWidth="352"
                       BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="columnCode" maxWidth="100.0" minWidth="100.0" prefWidth="-1.0" resizable="false"
                                 text="%global.code">
                        <cellValueFactory>
                            <PropertyValueFactory property="code"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="columnLabel" maxWidth="250.0" minWidth="250.0" prefWidth="-1.0"
                                 text="%global.label">
                        <cellValueFactory>
                            <PropertyValueFactory property="label"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button fx:id="btnRemove" disable="true" mnemonicParsing="false" onMouseClicked="#onRemoveCategory"
                    text="%global.remove"/>
            <Button mnemonicParsing="false" onMouseClicked="#onSave" text="%global.save"/>
            <Button mnemonicParsing="false" onMouseClicked="#onCancel" text="%global.cancel"/>
        </ToolBar>
    </bottom>
</BorderPane>
