<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="child"
            fx:controller="fr.frogdevelopment.assoplus.controller.MembersController">
    <center>
        <TableView fx:id="tableView" managed="true">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="%member.student.number">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentNumber"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.lastname">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastname"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.firstname">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstname"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="birthdayCol" text="%member.birthday"/>
                <TableColumn text="%member.email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="degreeCol" text="%member.degree" />
                <TableColumn fx:id="optionCol" text="%member.option"/>
                <TableColumn text="%member.phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="subscriptionCol" text="%member.subscription" minWidth="70" maxWidth="70" resizable="false"/>
                <TableColumn fx:id="annalsCol" text="%member.annals" minWidth="60" maxWidth="60" resizable="false"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" text="%member.create.title" onMouseClicked="#addMember">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/add_user_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#manageDegrees" text="%member.degrees">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/list_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <!--<Button mnemonicParsing="false" text="Rechercher">-->
            <!--<VBox.margin>-->
            <!--<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>-->
            <!--</VBox.margin>-->
            <!--</Button>-->
            <Button mnemonicParsing="false" onMouseClicked="#exportCSV" text="ExportCSV">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/list_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
    </bottom>

</BorderPane>
