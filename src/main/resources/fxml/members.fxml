<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="child" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.controller.MembersController">
    <center>
        <TableView fx:id="tableView" managed="true">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colStudentNumber" text="%member.student.number">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentNumber" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colLastname" text="%member.lastname">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastname" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colFirstname" text="%member.firstname">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstname" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colBirthday" text="%member.birthday" />
                <TableColumn fx:id="colEmail" text="%member.email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colDegree" text="%member.degree" />
                <TableColumn fx:id="colOption" text="%member.option" />
                <TableColumn fx:id="colPhone" text="%member.phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colSubscription" maxWidth="70" minWidth="70" resizable="false" text="%member.subscription" />
                <TableColumn fx:id="colAnnals" maxWidth="60" minWidth="60" resizable="false" text="%member.annals" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onMouseClicked="#addMember" text="%member.create.title">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/add_user_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#manageDegrees" text="%member.degrees">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/list_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <!--<Button mnemonicParsing="false" text="Rechercher">-->
            <!--<VBox.margin>-->
            <!--<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>-->
            <!--</VBox.margin>-->
            <!--</Button>-->
            <Button mnemonicParsing="false" onMouseClicked="#exportCSV" text="ExportCSV">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <graphic>
                    <ImageView>
                        <Image url="@../img/list_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
    </bottom>
   <top>
       <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <TextField fx:id="tfStudentNumber" prefHeight="25.0" prefWidth="85.0"/>
           <TextField fx:id="tfLastname" prefHeight="25.0" prefWidth="83.0"/>
           <TextField fx:id="tfFirstname" prefHeight="25.0" prefWidth="84.0"/>
           <TextField fx:id="tfBirthday" prefHeight="25.0" prefWidth="85.0"/>
           <TextField fx:id="tfEmail" prefHeight="25.0" prefWidth="82.0"/>
           <TextField fx:id="tfDegree" prefHeight="25.0" prefWidth="85.0"/>
           <TextField fx:id="tfOption" prefHeight="25.0" prefWidth="83.0"/>
           <TextField fx:id="tfPhone" prefHeight="25.0" prefWidth="84.0"/>
           <CheckBox fx:id="cbSubscription" mnemonicParsing="false" prefHeight="25.0" prefWidth="67.0"/>
           <CheckBox fx:id="cbAnnals" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0"/>
       </HBox>
   </top>

</BorderPane>
