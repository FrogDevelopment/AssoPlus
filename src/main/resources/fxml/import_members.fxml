<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="child" prefHeight="520.0" prefWidth="886.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.frogdevelopment.assoplus.controller.ImportMembersController">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="193.0" minWidth="25.0" prefWidth="178.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="518.0" minWidth="10.0" prefWidth="209.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="208.0" minWidth="25.0" prefWidth="162.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="667.0" minWidth="10.0" prefWidth="326.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <Button mnemonicParsing="false" onMouseClicked="#selectFile" text="%import.select.file"/>
            <Label fx:id="labelFileName" GridPane.columnIndex="1"/>

            <Label text="Delimiter" GridPane.columnIndex="2" GridPane.halignment="LEFT"/>
            <HBox spacing="10.0" GridPane.columnIndex="3" GridPane.valignment="CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <TextField fx:id="tfDelimiter" maxWidth="20" minWidth="20" prefWidth="20"/>
                <Button fx:id="btnHeaders" disable="true" text="%import.find.headers"
                        mnemonicParsing="false" onMouseClicked="#findHeaders"/>
            </HBox>

            <Label text="Headers" GridPane.rowIndex="1"/>
            <HBox fx:id="hboxTest" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>

            <Label fx:id="lbStudentNumber" text="%member.student.number" GridPane.rowIndex="2"/>
            <TextField fx:id="tfStudentNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label fx:id="lbLastname" text="%member.lastname" GridPane.rowIndex="3"/>
            <TextField fx:id="tfLastname" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label fx:id="lbFirstname" text="%member.firstname" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <TextField fx:id="tfFirstname" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

            <Label fx:id="lbBirthday" text="%member.birthday" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="tfBirthday" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

            <Label fx:id="lbEmail" text="%member.email" GridPane.rowIndex="4"/>
            <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label fx:id="lbPhone" text="%member.phone" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <TextField fx:id="tfPhone" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

            <Label fx:id="lbDegree" text="%member.degree" GridPane.rowIndex="5"/>
            <TextField fx:id="tfDegree" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label fx:id="lbOption" text="%member.option" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
            <TextField fx:id="tfOption" GridPane.columnIndex="3" GridPane.rowIndex="5"/>

            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="6"
                     GridPane.rowIndex="6">
                <Button fx:id="btnLoadData" disable="true"
                        mnemonicParsing="false" text="%import.load"
                        onMouseClicked="#importMembers"/>
            </ToolBar>
        </GridPane>
    </top>

    <center>
        <TableView fx:id="tableView" managed="true" prefHeight="400.0" prefWidth="1045.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="selectCol" maxWidth="20" minWidth="20" prefWidth="20" resizable="false"
                             sortable="false">
                </TableColumn>
                <TableColumn text="%member.student.number">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentNumber"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.lastname">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastname"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.firstname">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstname"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.birthday">
                    <cellValueFactory>
                        <PropertyValueFactory property="birthday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.degree">
                    <cellValueFactory>
                        <PropertyValueFactory property="degreeCode"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.option">
                    <cellValueFactory>
                        <PropertyValueFactory property="optionCode"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%member.phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>

    <bottom>
        <ToolBar fx:id="toolBar" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0"
                 BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#saveSelectedData" text="%global.save"/>
        </ToolBar>
    </bottom>

</BorderPane>
