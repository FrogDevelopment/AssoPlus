<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Fichier">
                <MenuItem mnemonicParsing="false" text="Quitter" onAction="#onExit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Paramètres" disable="true">
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="Adhérents">
                <fx:include source="members.fxml"/>
            </Tab>
            <Tab text="Librairie" disable="true">
            </Tab>
        </TabPane>
    </center>
