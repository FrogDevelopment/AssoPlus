<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:id="child" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.event.controller.EventsController">

    <top>
        <ToolBar BorderPane.alignment="CENTER">
            <Button onAction="#addEvent" text="%global.add">
                <graphic>
                    <ImageView>
                        <Image url="@../img/add_file_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="updateBtn" onAction="#addEvent" text="%global.update" disable="true">
                <graphic>
                    <ImageView>
                        <Image url="@../img/edit_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="publishBtn" onAction="#publishEvent" text="%event.publish" disable="true">
                <graphic>
                    <ImageView>
                        <Image url="@../img/up_32.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
    </top>
   <center>
        <TableView fx:id="tableView" managed="true" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colPublished" maxWidth="60" minWidth="60" resizable="false" text="%event.published" />
                <TableColumn fx:id="colDate" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="%event.date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%event.title" prefWidth="300">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%event.text">
                    <cellValueFactory>
                        <PropertyValueFactory property="text" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
   </center>

</BorderPane>
