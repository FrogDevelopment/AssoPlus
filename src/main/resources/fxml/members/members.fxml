<?import fr.frogdevelopment.assoplus.components.controls.NumberTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.frogdevelopment.assoplus.controller.MembersController">
    <left>
        <ToolBar prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" orientation="VERTICAL">
            <Button fx:id="btnShowHide" mnemonicParsing="false" text="Montrer" onMouseClicked="#showHideMember">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#manageLicences" text="Diplômes">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <!--<Button mnemonicParsing="false" text="Rechercher">-->
            <!--<VBox.margin>-->
            <!--<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>-->
            <!--</VBox.margin>-->
            <!--</Button>-->
            <Button mnemonicParsing="false" onMouseClicked="#importMembers" text="Importer">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </ToolBar>
    </left>

    <center>
        <VBox>
            <VBox fx:id="vbTop" visible="false" managed="false">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints minWidth="100.0" prefWidth="150.0"/>
                        <ColumnConstraints minWidth="100.0" prefWidth="200.0"/>
                        <ColumnConstraints minWidth="10.0" prefWidth="10.0"/>
                        <ColumnConstraints minWidth="100.0" prefWidth="150.0"/>
                        <ColumnConstraints minWidth="100.0" prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                    </rowConstraints>

                    <Label text="Nom" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtLastname" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Prénom" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                    <TextField fx:id="txtFirstname" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

                    <Label text="Date de naissance" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="dpBirthday" GridPane.rowIndex="1" GridPane.columnIndex="1" showWeekNumbers="false"/>

                    <Label text="%member.student.number" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    <NumberTextField fx:id="txtStudentNumber" GridPane.rowIndex="1" GridPane.columnIndex="4"/>

                    <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Diplôme" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbLicence" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Option" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                    <ComboBox fx:id="cbOption" GridPane.rowIndex="3" GridPane.columnIndex="4"/>

                    <Label text="N° téléphone" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPhone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Adresse" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtAddress" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

                    <Label text="Code Postal" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <NumberTextField fx:id="txtPostalCode" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Ville" GridPane.rowIndex="6" GridPane.columnIndex="3"/>
                    <TextField fx:id="txtCity" GridPane.rowIndex="6" GridPane.columnIndex="4"/>
                </GridPane>
                <Button onAction="#saveData" text="Save"/>
            </VBox>

            <TableView fx:id="table" managed="true">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="%member.student.number">
                        <cellValueFactory>
                            <PropertyValueFactory property="studentNumber"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nom">
                        <cellValueFactory>
                            <PropertyValueFactory property="lastname"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Prénom">
                        <cellValueFactory>
                            <PropertyValueFactory property="firstname"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Date de naissance">
                        <cellValueFactory>
                            <PropertyValueFactory property="birthday"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="email">
                        <cellValueFactory>
                            <PropertyValueFactory property="email"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Diplôme">
                        <cellValueFactory>
                            <PropertyValueFactory property="licenceCode"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Option">
                        <cellValueFactory>
                            <PropertyValueFactory property="optionCode"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Téléphone">
                        <cellValueFactory>
                            <PropertyValueFactory property="phone"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Adresse">
                        <cellValueFactory>
                            <PropertyValueFactory property="address"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Code Postal">
                        <cellValueFactory>
                            <PropertyValueFactory property="postalCode"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Ville">
                        <cellValueFactory>
                            <PropertyValueFactory property="city"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
