<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.frogdevelopment.assoplus.controller.DegreeController">
    <center>
        <TreeTableView fx:id="treeTableView" BorderPane.alignment="CENTER">
            <columns>
                <TreeTableColumn fx:id="columnCode" prefWidth="75.0" resizable="false" text="%global.code">
                    <cellValueFactory>
                        <TreeItemPropertyValueFactory property="code"/>
                    </cellValueFactory>
                </TreeTableColumn>
                <TreeTableColumn fx:id="columnLabel" prefWidth="300.0" text="%global.label">
                    <cellValueFactory>
                        <TreeItemPropertyValueFactory property="label"/>
                    </cellValueFactory>
                </TreeTableColumn>
            </columns>
        </TreeTableView>
    </center>

    <bottom>
        <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="35.0" prefWidth="627.0" BorderPane.alignment="CENTER">
            <Button onMouseClicked="#onClose" text="%global.close"/>
            <Button onMouseClicked="#onSave" text="%global.save"/>
        </ToolBar>
    </bottom>

   <right>
       <VBox prefHeight="400.0" prefWidth="254.0" BorderPane.alignment="CENTER">
           <Label alignment="CENTER" contentDisplay="CENTER" text="Label">
              <font>
                  <Font size="22.0"/>
              </font>
           </Label>
           <HBox alignment="CENTER" spacing="5.0">
               <Button onMouseClicked="#onAddLicence" text="%member.degree.add"/>
               <Button onMouseClicked="#onAddOption" text="%member.option.add"/>
           </HBox>
           <Label text="%global.code"/>
           <TextField fx:id="tfCode"/>
           <Label text="%global.label"/>
           <TextField fx:id="tfLabel"/>
           <HBox alignment="CENTER" spacing="5.0">
               <Button fx:id="btnRemove" onMouseClicked="#onRemove" text="%member.degree.remove" disable="true"/>
           </HBox>
       </VBox>
   </right>
</BorderPane>
